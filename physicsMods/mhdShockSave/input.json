{
"Xgrid":{
         "Xmin":-0.5,
         "Xmax":0.5,
         "nX":1000,
         "nXg":2 // number of guard cells each end
        },
"Time":{
        "dtOut":0.05,     // output time intervals
        "tOutSteps":10,   // number of output setps
        "dtFrac":2.0     // dtSim = dtMax/dtFrac
       },
"Physics":{
           "advScheme":"TVD", // "U1", "C2", "QUICK", "TVD"
           "Nsub":2, // time solver subcycles (1|2 for U1|TVD)
           "gammaC":1.6667, // adiabatic coefficient
           "N":{
                "type":"const", // initial profile
                "a":0.0,  // amplitude
                "b":0.0,  // x-shift
                "c":0.0,  // width
                "d":1.0   // y-shift
               },
           "P":{
                "type":"const", // initial profile
                "a":0.0,  // amplitude
                "b":0.0,  // x-shift
                "c":0.0,  // width
                "d":1.0   // y-shift
               },
           "V":{
                "type":"const", // initial profile
                "a":0.0,  // amplitude
                "b":0.0,  // x-shift
                "c":0.0,  // width
                "d":0.0   // y-shift
               },
           "B":{
                "type":"tanh", // initial profile
                "a":-0.5, // amplitude
                "b":0.0,  // x-shift
                "c":0.05,  // width
                "d":0.5   // y-shift
               }
          }
}

